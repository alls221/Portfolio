@model IEnumerable<MyPortfolio.Models.Project>

@{
    ViewBag.Title = "Index";
}

<body>

    @foreach (var item in Model)
    {
        <div class="container,col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Html.DisplayFor(modelItem => item.Image)" width="200" height="200" />
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ProjectName)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
            </div>
        </div>
    }
</body>